<h2>Alterar Conta</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, :autofocus => true %>

    <%= f.input :email, :required => true %>

    <%= f.input :current_password,
                :hint => t(:we_need_your_current_password_to_confirm_your_changes),
                :required => true,
                :label => t(:current_password)%>

    <h3>Alterar Senha</h3>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                :autocomplete => "off",
                :hint => t(:leave_it_blank_if_you_dont_want_to_change_it),
                :required => false,
                :label => t(:new_password) %>
    <%= f.input :password_confirmation,
                :required => false,
                :label => t(:new_password_confirmation) %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:update) %>
  </div>
<% end %>

<h3><%= t(:cancel_my_account) %></h3>

<p><%= t(:unhappy) %> <%= link_to t(:cancel_my_account), registration_path(resource_name), :data => { :confirm => t(:sure) }, :method => :delete %>.</p>

<%= link_to t(:back), customers_path %>
