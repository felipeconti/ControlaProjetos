<%- model_class = Item -%>

<% @where_pending    = get_where_with_state(1) %>
<% @where_completed  = get_where_with_state(2) %>
<% @where_canceled   = get_where_with_state(3) %>

<h2><%= t(:items) %></h2>

<%= render :partial => 'items/list_filter', :locals => { :type => 1, :where => @where_pending } %>
<%= render :partial => 'items/list_filter', :locals => { :type => 2, :where => @where_completed } %>
<%= render :partial => 'items/list_filter', :locals => { :type => 3, :where => @where_canceled } %>