<h1>Listing items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Hour estimated</th>
    <th>Hour used</th>
    <th>Date start</th>
    <th>Date end</th>
    <th>Task</th>
    <th>Type</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.description %></td>
    <td><%= item.hour_estimated %></td>
    <td><%= item.hour_used %></td>
    <td><%= item.date_start %></td>
    <td><%= item.date_end %></td>
    <td><%= item.task_id %></td>
    <td><%= item.type_id %></td>
    <td><%= item.user_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

