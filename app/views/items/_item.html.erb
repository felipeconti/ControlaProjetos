<tr>
  <td><%= link_to item.description, customer_project_task_item_path(@customer, @project, @task, item) %></td>
  <td><%= item.hour_estimated %></td>
  <td><%= item.hour_used %></td>
  <td><%= item.date_start %></td>
  <td><%= item.date_end %></td>
  <td><%= item.task_id %></td>
  <td><%= item.type_id %></td>
  <td><%= item.user_id %></td>
  <td><%=l item.created_at %></td>

  <td>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_customer_project_task_item_path(@customer, @project, @task, item), :class => 'btn btn-mini' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                customer_project_task_item_path(@customer, @project, @task, item),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>