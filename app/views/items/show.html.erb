<div class="page-header">
  <h3><%= link_to "#{@task.title} ", customer_project_task_path(@customer, @project, @task), class: 'small' %> \ <%= @item.title %> </h3>
</div>

<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @item.title %>
</p>

<p>
  <b>Hour estimated:</b>
  <%= @item.hour_estimated %>
</p>

<p>
  <b>Hour used:</b>
  <%= @item.hour_used %>
</p>

<p>
  <b>Date start:</b>
  <%= @item.date_start %>
</p>

<p>
  <b>Date end:</b>
  <%= @item.date_end %>
</p>

<p>
  <b>User:</b>
  <% if not @item.user.nil? %>
    <%= @item.user.email %>
  <% end %>
</p>

<p>
  <b>State:</b>
  <%= @item.state.description %>
</p>

<p>
  <b>Description:</b>
  <%= simple_format(@item.description) %>
</p>

<%= link_to 'Edit', edit_customer_project_task_item_path(@customer, @project, @task, @item) %> |
<%= link_to 'Back', customer_project_task_path(@customer, @project, @task) %>
