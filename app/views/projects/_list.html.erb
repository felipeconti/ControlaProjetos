<%- model_class = Project -%>

<h2><%= t(:projects)%></h2>

<table class="table table-hover table-bordered table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th><%= t(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:date_begin) %></th>
    <th><%= model_class.human_attribute_name(:date_end) %></th>
    <th><%= t(:tasks) %></th>
    <th class="no_priority"><%= t 'items_analyzing' %></th>
    <th><%= t 'items_pending' %></th>
    <th class="completed"><%= t 'items_completed' %></th>
    <th class="canceled"><%= t 'items_canceled' %></th>
    <th><%=t 'actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
    <%= render @customer.projects %>
  </tbody>
</table>