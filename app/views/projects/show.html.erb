<%- model_class = Project -%>

<div class="page-header">
  <h1><%= link_to "#{@customer.name} >", customer_path(@customer), class: 'small' %> <%= @project.name %> </h1>
</div>

<% if not @project.brainstorm.nil? %>
    <h3>Brainstorm</h3>
    <%= simple_format(@project.brainstorm) %>
    <br>
    <br>
<% end %>

<h2>Tarefas</h2>

<table class="table table-hover">
  <tbody>
  <%= render @project.tasks %>
  </tbody>
</table>

<%= link_to "Nova tarefa", new_customer_project_task_path(@customer, @project), class: 'btn btn-primary' %>
