<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Hours</th>
    <th>Status</th>
    <th>Project</th>
    <th>User</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= task.hours %></td>
    <td><%= task.status %></td>
    <td><%= task.project_id %></td>
    <td><%= task.user_id %></td>
    <td><%= task.type_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

