<%- model_class = Task -%>

<h2>Tarefas</h2>

<table class="table table-hover">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:user_id) %></th>
    <th><%= model_class.human_attribute_name(:type_id) %></th>
    <th><%= model_class.human_attribute_name(:hours) %></th>
    <th><%= model_class.human_attribute_name(:state_id) %></th>
    <th><%= t 'items' %></th>
    <th><%= t 'items_analyzing' %></th>
    <th><%= t 'items_pending' %></th>
    <th><%= t 'items_completed' %></th>
    <th><%= t 'items_canceled' %></th>
    <th><%= t 'actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <%= render @project.tasks %>
  </tbody>
</table>