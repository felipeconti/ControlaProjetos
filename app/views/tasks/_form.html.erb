<%= simple_form_for [@customer, @project, @task], :html => { :class => 'form-horizontal' } do |f| %>

    <% if @task.errors.any? %>
    <div id="error_explanation">
      <h3><%= t(:error) %></h3>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('cancel', :default => t("helpers.links.cancel")),
                  customer_project_path(@customer, @project), :class => 'btn' %>
    </div>

    <%= f.input :title, :autofocus => true %>
    <%= f.input :priority %>
    <%= f.label :type_id %>
    <%= f.select :type_id,
                 options_from_collection_for_select(Type.all, "id", "description"),
                 :prompt => t(:select_type) %>
    <%= f.label :state_id %>
    <%= f.select :state_id,
                 options_from_collection_for_select(State.all, "id", "description"),
                 :prompt => t(:select_state) %>
    <%= f.input :description %>

<% end %>