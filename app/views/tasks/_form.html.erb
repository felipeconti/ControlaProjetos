<%= simple_form_for [@customer, @project, @task], :html => { :class => 'form-horizontal' } do |f| %>

    <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

    <%= f.input :title %>
    <%= f.label :type_id %>
    <%= f.select :type_id,
                 Type.all.map { |u| [u.description, u.id] },
                 :prompt => t(:select_type) %>
    <%= f.input :hours %>
    <%= f.label :state_id %>
    <%= f.select :state_id,
                 State.all.map { |u| [u.description, u.id] },
                 :prompt => t(:select_state) %>
    <%= f.input :description %>

    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('cancel', :default => t("helpers.links.cancel")),
                  customer_project_path(@customer, @project), :class => 'btn' %>
    </div>

<% end %>