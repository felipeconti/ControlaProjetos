<tr>
  <td><%= link_to task.title, customer_project_task_path(@customer, @project, task) %></td>
  <% if task.user.nil? %>
    <td> - </td>
  <% else %>
    <td><%= task.user.email %></td>
  <% end %>
  <td><%= task.type.description %></td>
  <td><%= task.hours %></td>
  <td><%= task.state.description %></td>
  <td><%= task.items.count %></td>
  <td><%= task.items.where(get_where(1)).count %></td>
  <td><%= task.items.where(get_where(2)).count %></td>
  <td><%= task.items.where(get_where(3)).count %></td>
  <td><%= task.items.where(get_where(4)).count %></td>
  <td>
    <%= link_to t('edit', :default => t("helpers.links.edit")),
                edit_customer_project_task_path(@customer, @project, task), :class => 'btn btn-mini' %>
    <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                customer_project_task_path(@customer, @project, task),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t('sure'))) },
                :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>