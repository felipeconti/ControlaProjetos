<tr>
  <td><%= link_to task.description, customer_project_task_path(@customer, @project, task) %></td>
  <td><%= task.hours %></td>
  <td><%= task.status %></td>
  <td><%= task.user_id %></td>
  <td><%= task.type_id %></td>
  <td><%=l task.created_at %></td>
  <td>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_customer_project_task_path(@customer, @project, task), :class => 'btn btn-mini' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                customer_project_task_path(@customer, @project, task),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>