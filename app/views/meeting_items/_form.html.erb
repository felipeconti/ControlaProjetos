<%= simple_form_for [@meeting, @item], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h3><%= t(:error) %></h3>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('cancel', :default => t("helpers.links.cancel")),
              meeting_path(@meeting), :class => 'btn' %>
  </div>

  <%= f.input :subject, :autofocus => true %>
  <%= f.label :customer_id %>
  <%= f.select :customer_id,
               options_from_collection_for_select(Customer.all, "id", "name"),
               :prompt => t(:select_customer) %>
  <%= f.label :user_id %>
  <%= f.select :user_id,
               options_from_collection_for_select(User.all, "id", "name"),
               :prompt => t(:select_user) %>
  <%= f.input :date_state, as: :string, input_html: { class: 'datepicker' } %>
  <%= f.label :state_id %>
  <%= f.select :state_id,
               options_from_collection_for_select(State.all, "id", "description"),
               :prompt => t(:select_state) %>
  <%= f.input :decision %>

<% end %>
