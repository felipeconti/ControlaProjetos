<%- model_class = Customer -%>

<div class="page-header">
  <h3>
    <%= image_tag @customer.logo.url(:small) %>
    <%= link_to t(:customers), customers_path, class: 'small' %> \ <%= getNameOrNick(@customer.name, @customer.nickname) %> \ <%= t(:projects) %>
  </h3>
</div>

<p id="notice"><%= notice %></p>

<%= link_to t('helpers.titles.new', :model => t(:project)), new_customer_project_path(@customer), class: 'btn btn-primary' %>

<%= render :partial => 'projects/list' %>
