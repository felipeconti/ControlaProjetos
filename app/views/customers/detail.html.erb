<div class="page-header">
  <h3>
    <%= image_tag @customer.logo.url(:small) %>
    <%= link_to t(:customers), customers_path, class: 'small' %> \ <%= getNameOrNick(@customer.name, @customer.nickname) %>
  </h3>
</div>

<p id="notice"><%= notice %></p>

<p>
  <b><%= t(:name) %></b>
  <%= @customer.name %>
</p>

<p>
  <b><%= t(:nickname) %></b>
  <%= @customer.nickname %>
</p>

<p>
  <b><%= t(:address) %></b>
  <%= @customer.address %>
</p>

<p>
  <b><%= t(:complement) %></b>
  <%= @customer.complement %>
</p>

<p>
  <b><%= t(:neighborhood) %></b>
  <%= @customer.neighborhood %>
</p>

<p>
  <b><%= t(:zip_code) %></b>
  <%= @customer.zip_code %>
</p>

<p>
  <b><%= t(:phone) %></b>
  <%= @customer.phone %>
</p>

<p>
  <b><%= t(:mobile) %></b>
  <%= @customer.mobile %>
</p>

<p>
  <b><%= t(:fax) %></b>
  <%= @customer.fax %>
</p>

<p>
  <b><%= t(:enrollment) %></b>
  <%= @customer.enrollment %>
</p>

<p>
  <b><%= t(:email) %></b>
  <%= @customer.email %>
</p>

<p>
  <b><%= t(:website) %></b>
  <%= link_to @customer.website,
              url_with_protocol(@customer.website),
              :target => "_blank" %>
</p>

<%= link_to t(:edit), edit_customer_path(@customer) %> |
<%= link_to t(:back), customers_path %>
